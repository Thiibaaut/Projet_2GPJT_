{% extends 'base_hors_appli.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <div class="container">
        <h1>Inscrivez-vous</h1>
        <h3 class="h3 mb-4 font-weight-normal">Pour accèder à l'application, veuillez-vous inscrire ci-dessous</h3>
        <div class="form_inscription">
                {{ form_errors(registrationForm) }}

                {{ form_start(registrationForm) }}
            {{ form_row(registrationForm.email, {'attr': {'class': 'form-control'}}) }}
            {{ form_row(registrationForm.plainPassword, {'attr': {'class': 'form-control'},
                label: 'Mot de passe'
            }) }}
            {{ form_row(registrationForm.nom, {'attr': {'class': 'form-control'},
                label: "Nom d'utilisateur"
            }) }}
            {{ form_row(registrationForm.agreeTerms, {
                label: "Vous acceptez les conditions d'utilisations"
            }) }}
                <button class="button mb-5">{{ button_label|default("S'inscrire") }}</button>
            {{ form_end(registrationForm) }}
        </div>
    </div>
    <a class="btn" id="button" href="{{ path('app_login') }}">Se connecter</a>
{% endblock %}